<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:onClick="details"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" >

        <ImageView
            android:id="@+id/plateImage"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <com.moysof.mydrivingblows.PlateText
            android:id="@+id/plateNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:shadowColor="#000"
            android:shadowRadius="3"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="11dp"
        android:paddingTop="10dp"
        android:orientation="vertical" >

        <com.moysof.mydrivingblows.LightRobotoText
            android:id="@+id/commentInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="-2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#999"
            android:textSize="14sp" />

        <com.moysof.mydrivingblows.MediumRobotoText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:textColor="#eee"
            android:textSize="14sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/photoLayout"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:visibility="gone" >

        <ProgressBar
            style="?android:progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:maxHeight="80dp"
            android:scaleType="centerCrop" />
    </FrameLayout>

</LinearLayout>