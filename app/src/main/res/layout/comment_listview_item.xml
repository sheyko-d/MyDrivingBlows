<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/photoLayout"
            android:layout_width="40dp"
            android:layout_marginRight="16dp"
            android:layout_height="40dp"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/commentProgressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <com.moysof.mydrivingblows.RoundedImageView
                android:id="@+id/commentsImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_play_small"
                android:id="@+id/videoIcon"
                android:visibility="gone"
                android:layout_gravity="center" />

            <View
                android:id="@+id/commentClick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"></View>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.moysof.mydrivingblows.RegularRobotoText
                android:id="@+id/infoTextView"
                android:layout_width="match_parent"
                android:includeFontPadding="false"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="#bbb"
                android:textSize="14sp" />

            <com.moysof.mydrivingblows.RegularRobotoText
                android:id="@+id/commentTextView"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:includeFontPadding="false"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="14sp" />

            <com.moysof.mydrivingblows.RegularRobotoText
                android:id="@+id/locTextView"
                android:layout_width="wrap_content"
                android:includeFontPadding="false"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/location"
                android:background="@drawable/id_bg"
                android:clickable="true"
                android:drawablePadding="2dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:alpha="0.6"
                android:paddingRight="6dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="#dadada"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>