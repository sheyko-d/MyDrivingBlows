<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppBaseTheme.ActionBar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppBaseTheme.NoActionBar" parent="AppBaseTheme">
    </style>

    <style name="AppBaseTheme.Gray" parent="AppBaseTheme.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_gray_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppBaseTheme.NoActionBar.Tag" parent="AppBaseTheme.NoActionBar">
        <item name="colorControlNormal">#DDFFFFFF</item>
        <item name="colorControlActivated">#EEFFFFFF</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="AppBaseTheme.Fullscreen" parent="AppBaseTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppBaseTheme.Login.NoActionBar" parent="AppBaseTheme.NoActionBar">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@drawable/action_bar</item>
    </style>

    <style name="dividedListStyle" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>