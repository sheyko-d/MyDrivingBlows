<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moysof.mydrivingblows">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <permission
        android:name="com.moysof.mydrivingblows.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.moysof.mydrivingblows.permission.MAPS_RECEIVE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <!--This meta-data tag is required to use Google Play Services.-->
    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />
    <meta-data
        android:name="com.facebook.sdk.ApplicationId"
        android:value="@string/app_id" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/sm_logo"
        android:theme="@style/AppBaseTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCJb135gz1ckvxhzixrQo4ige7NngWQImk" />

        <activity
            android:name=".TagActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_tag"
            android:theme="@style/AppBaseTheme.NoActionBar.Tag"></activity>
        <activity
            android:name=".NewsActivity"
            android:theme="@style/AppBaseTheme.NoActionBar"
            android:label="@string/title_activity_list"></activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppBaseTheme.NoActionBar"></activity>
        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_login"
            android:theme="@style/AppBaseTheme.Login.NoActionBar"
            android:windowSoftInputMode="stateHidden"></activity>
        <!--Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name=".FeedActivity"
            android:icon="@drawable/sm_logo"
            android:label="@string/title_activity_feed"
            android:theme="@style/AppBaseTheme.NoActionBar"></activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".LauncherActivity"
            android:label="@string/app_icon_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UsernameActivity"
            android:label="@string/title_activity_username"></activity>
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/AppBaseTheme.NoActionBar"
            android:label="@string/title_activity_settings"></activity>
        <activity
            android:name=".FullscreenVideoActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_video"
            android:theme="@style/AppBaseTheme.Fullscreen"></activity>
        <activity
            android:name=".FullscreenImageActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_image"
            android:theme="@style/AppBaseTheme.Gray" />
    </application>

</manifest>
